<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <stroke android:width="3sp"
                android:color="@color/grisoscuro"/>
            <corners android:radius="15sp"/>
            <gradient android:type="linear" android:angle="270" android:startColor="@color/blanco"
                android:endColor="@color/blanco" />
        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke android:width="3sp"
                    android:color="@color/grisoscuro"/>
                <corners android:radius="15sp"/>
                <gradient android:type="linear" android:angle="270" android:startColor="@color/celeste"
                    android:endColor="@color/celeste" />
            </shape>
        </clip>
    </item>
</layer-list>