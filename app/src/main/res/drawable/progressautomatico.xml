<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <stroke android:width="3sp"
                android:color="@color/amarillo"/>
            <corners android:radius="15sp"/>
            <gradient android:type="linear" android:angle="270" android:startColor="@color/gris"
                android:endColor="@color/gris" />
        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke android:width="3sp"
                    android:color="@color/amarillo"/>
                <corners android:radius="15sp"/>
                <gradient android:type="linear" android:angle="270" android:startColor="#3EFF46"
                    android:endColor="#3EFF46" />
            </shape>
        </clip>
    </item>
</layer-list>