<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>

            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />
                    <stroke android:color="#00FFFFFF" android:width="1dp" />
                    <gradient android:angle="270" android:endColor="#00163969" android:startColor="#00C8CACC" />
                    <corners android:radius="19dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>

            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />
                    <stroke android:color="#00000000" android:width="1dp" />
                    <gradient android:angle="270" android:endColor="@color/rojobrillante2" android:startColor="@color/rojobrillante2" />

                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>