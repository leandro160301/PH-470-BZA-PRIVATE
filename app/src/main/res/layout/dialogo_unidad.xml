<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/stylekeycor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="600dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <Button
                android:id="@+id/buttonc"
                android:layout_width="173dp"
                android:layout_height="88dp"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:background="@drawable/boton_selector_gris"
                android:text="CANCELAR"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="715dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="597dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="429dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="865dp"
                android:layout_height="349dp"
                android:layout_marginStart="70dp"
                android:background="@drawable/botoneraprincipal2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="706dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="317dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewt"
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:text="Unidad"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="#FFFFFF"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/tvTema1"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:background="@drawable/stylekeycor3"
                            android:gravity="center"
                            android:text="mm"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tvTema2"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/stylekeycor3"
                            android:gravity="center"
                            android:text="cm"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>