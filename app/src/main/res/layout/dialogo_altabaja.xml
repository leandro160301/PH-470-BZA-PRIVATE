<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/stylekeycor"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="600dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="485dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="@drawable/botoneraprincipal2"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonc"
                        android:layout_width="186dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/boton_selector_gris"
                        android:text="CANCELAR"
                        android:textSize="24sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="814dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="13dp"
                            android:padding="1dp">

                            <EditText
                                android:id="@+id/etDatos"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/stylekeycor3"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center|start|left"
                                android:importantForAutofill="no"
                                android:inputType="textUri|textNoSuggestions"
                                android:textColor="#757575"
                                android:textSize="30sp" />

                            <ImageView
                                android:id="@+id/im_buscador"
                                android:layout_width="178dp"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@+id/etDatos"
                                android:layout_alignEnd="@+id/etDatos"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="450dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="9dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/stylekeycor6"
                                app:srcCompat="@drawable/add_icon" />

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="17dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="129dp"
                        android:layout_marginStart="7dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewt5"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:text="PRODUCTO"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvcodigo"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/stylekeycor3"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:importantForAutofill="no"
                            android:inputType="textUri|textNoSuggestions"
                            android:textColor="@color/negro"
                            android:textSize="24sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>