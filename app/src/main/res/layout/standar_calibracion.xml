                                            android:layout_width="wrap_content"
                                            android:layout_height="65dp"
                                            android:fontFamily="sans-serif-medium"
                                            android:text="  Ultima Calibracion"
                                            android:textColor="#000000"
                                            android:textSize="20sp" />

                                        <TextView
                                            android:id="@+id/textView17"
                                            android:layout_width="39dp"
                                            android:layout_height="3dp" />

                                        <TextView
                                            android:id="@+id/tvUltimaCalibracion"
                                            android:layout_width="258dp"
                                            android:layout_height="42dp"
                                            android:background="@drawable/fondolineainferiornegratranslucido"
                                            android:fontFamily="sans-serif-medium"
                                            android:textAlignment="center"
                                            android:textColor="#000000"
                                            android:textSize="17sp" />


                                    </TableRow>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="68dp"
                                        android:layout_marginStart="35dp"
                                        android:layout_marginEnd="15dp"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/btIniciarCalibracion"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginEnd="5dp"
                                            android:background="@drawable/botoneraprincipalgrisoscuro"
                                            android:fontFamily="sans-serif-black"
                                            android:gravity="center"
                                            android:text="Iniciar Calibracion"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                            android:textColor="#FFFFFF"
                                            android:textSize="22sp" />

                                        <Button
                                            android:id="@+id/btReajusteCero"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="5dp"
                                            android:background="@drawable/botoneraprincipalgrisoscuro"
                                            android:fontFamily="sans-serif-black"
                                            android:gravity="center"
                                            android:text="Re Ajuste Cero"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                            android:textColor="#FFFFFF"
                                            android:textSize="22sp" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

