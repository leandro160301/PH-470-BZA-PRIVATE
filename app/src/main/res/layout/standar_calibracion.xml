                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="40dp"

                    android:layout_weight="1"
                    android:background="@drawable/banner_menu_"
                    android:orientation="vertical">

                    <LinearLayout
