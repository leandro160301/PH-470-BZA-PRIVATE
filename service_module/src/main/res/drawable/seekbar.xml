<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:id="@android:id/background" >
    <shape >
        <corners android:radius="20dp"
           />
        <gradient

            android:startColor="@color/grisbarrasuperior"
            android:centerColor="@color/grisbarrasuperior"
            android:centerX="1"
            android:endColor="@color/grisbarrasuperior"
            android:angle="0"
            />
    </shape>
</item>
<item android:id="@android:id/progress" >
<clip android:clipOrientation="horizontal" android:gravity="left" >
    <shape>
        <corners android:radius="20dp" />
        <gradient
            android:startColor="@color/colorPrimary"
            android:centerColor="@color/rojobrillante"
            android:centerX="0.35"
            android:endColor="@color/blanco"
            android:angle="0"
            />
    </shape>
</clip>
</item>
</layer-list>